{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "extends": ["ultracite"],
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "linter": {
    "rules": {
      "style": {
        "useBlockStatements": "off"
      },
      "suspicious": {
        "noConsole": "off"
      },
      "performance": {
        "noNamespaceImport": "off"
      }
    }
  }
}
